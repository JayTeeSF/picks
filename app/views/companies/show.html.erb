<h1><%= @company.name %></h1>

<p>
  <b>Symbol</b><br>
  <%= @company.symbol %>
</p>

<p>
  <b>Sector / Industry</b><br>
  <%= @company.sector_industry_label %>
</p>

<p>
  <b>Exchange</b><br>
  <%= @company.exchange %>
</p>

<p>
  <b>Profile</b><br>
  <%= @company.profile %>
</p>

<p>
  <b>Investment blurb</b><br>
  <%= @company.investment_blurb %>
</p>

<p>
  <b>Big dividends</b><br>
  <%= @company.big_dividends %>
</p>

<div class="form-actions">
  <%= link_to 'Back', companies_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_company_path(@company), :class => 'btn' %>
  <%= link_to 'Delete', company_path(@company), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
