<%= form_for @company, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Company</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :symbol, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :symbol, :class => 'text_field' %>
      </div>
    </div>

    <%# TODO: create a dropdown of sector/industry mapping to industry_id(s) %>
    <div class="control-group">
      <%= f.label :industry_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :industry_id, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :exchange, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :exchange, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :profile, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :profile, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :investment_blurb, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :investment_blurb, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :big_dividends, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :big_dividends, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', companies_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
