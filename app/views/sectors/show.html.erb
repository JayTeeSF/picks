<h1>Sector</h1>

<p>
  <b>Name</b><br>
  <%= @sector.name %>
</p>

<p>
  <b>Comment</b><br>
  <%= @sector.comment %>
</p>

<div class="form-actions">
  <%= link_to 'Back', sectors_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_sector_path(@sector), :class => 'btn' %>
  <%= link_to 'Delete', sector_path(@sector), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
